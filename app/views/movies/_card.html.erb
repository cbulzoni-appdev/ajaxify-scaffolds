<div id="<%= dom_id(movie) %>" class="card" style="width: 18rem;">
    <img src="<%= movie.image %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 id="<%= dom_id(movie) %>_title" class="card-title"><%= movie.title %></h5>
      <p class="card-text"><%= movie.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Duration: <%= movie.duration %> minutes</li>
      <li class="list-group-item">Year: <%= movie.year %></li>
      <li class="list-group-item">Director: <%= movie.director.name %></li>
    </ul>
    <div class="card-body">
      <%= link_to 'Show', movie %>
      <%= link_to 'Edit', edit_movie_path(movie), remote: true %>
      <%= link_to 'Destroy', movie, method: :delete %>
    </div>
  </div>
